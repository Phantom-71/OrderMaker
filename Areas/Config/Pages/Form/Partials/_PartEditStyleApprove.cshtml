@model PartEditModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div class="mtd-desk-fields">

    <div class="mtd-desk-field mtd-desk-field--border">
        <div class="mdc-select" style="width: 100%; margin-top: 8px;">
            <i class="mdc-select__dropdown-icon"></i>
            <select class="mdc-select__native-control" asp-for="@Model.MtdFormPart.MtdSysStyle" asp-items="ViewBag.Styles" name="partStyle"></select>
            <label class="mdc-floating-label mdc-floating-label--float-above">@Localizer["Part style"]</label>
            <div class="mdc-line-ripple"></div>
        </div>
    </div>

</div>
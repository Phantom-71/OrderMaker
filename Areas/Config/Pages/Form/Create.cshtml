@page
@model CreateModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["New form"];
    ViewData["SecondTitle"] = Localizer["Creating new form pattern"];
}


@section Breadcrumb {
    <li><a href="/config">@Localizer["Configurator"]</a></li>
    <li><a href="/config/form">@Localizer["Forms"]</a></li>
    <li>@ViewBag.Title</li>
}
<form mtd-data-form method="post" autocomplete="off" enctype="multipart/form-data" action="">
    <input type="hidden" asp-for="MtdForm.Id" />
    <div class="mdc-elevation--z2" style="max-width: 450px; margin: 0 auto; left: 50%; background-color: white; padding: 16px;">

        <div id="basedSelect" class="mdc-select" style="width: 100%">
            <i class="mdc-select__dropdown-icon"></i>
            <select class="mdc-select__native-control" asp-for="MtdForm.Parent" asp-items="ViewBag.Forms">
                <option value="null">@Localizer["NO"]</option>
            </select>
            <label for="basedSelect" class="mdc-floating-label mdc-floating-label--float-above">@Localizer["Base form"]</label>
            <div class="mdc-line-ripple"></div>
        </div>

        <div id="config-form-name" class="mdc-text-field mdc-text-field--outlined" style="width: 100%; margin-top: 16px;">
            <input type="text" id="tf-outlined" mtd-required="config-form-name" class="mdc-text-field__input" asp-for="MtdForm.Name" required />
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="tf-outlined" class="mdc-floating-label">@Localizer["Name"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>
        <div class="mdc-text-field-helper-line">
            <div class="mdc-text-field-helper-text mdc-text-field-helper-text--validation-msg" aria-hidden="true">
                @Localizer["Required field"]
            </div>
        </div>
        <div id="config-form-description" class="mdc-text-field mdc-text-field--textarea" style="width: 100%; margin-top: 16px;">
            <textarea id="textarea" mtd-required="config-form-description" class="mdc-text-field__input" rows="3" cols="40" asp-for="MtdForm.Description" required></textarea>
            <div class="mdc-notched-outline">
                <div class="mdc-notched-outline__leading"></div>
                <div class="mdc-notched-outline__notch">
                    <label for="textarea" class="mdc-floating-label">@Localizer["Description"]</label>
                </div>
                <div class="mdc-notched-outline__trailing"></div>
            </div>
        </div>
        <div class="mdc-text-field-helper-line">
            <div class="mdc-text-field-helper-text mdc-text-field-helper-text--validation-msg" aria-hidden="true">
                @Localizer["Required field"]
            </div>
        </div>
        <div style="text-align: right; margin-top: 16px;">
            <button mtd-data-clicker mtd-data-location="/config/form/edit?id=@Model.MtdForm.Id" mtd-data-message="@Localizer["New form created"]." class="mdc-button mdc-button--raised" type="button">@Localizer["Create"]</button>
        </div>
    </div>
</form>
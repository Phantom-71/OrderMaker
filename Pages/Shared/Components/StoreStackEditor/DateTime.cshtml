@model Data.MtdStoreStack

@{ 
    string dateValue = "";
    if (Model.MtdStoreStackDate.Register != null)
    {
        dateValue = Model.MtdStoreStackDate.Register.ToString("g");
    }
}


@switch (ViewBag.TypeStyle)
{
    case "Columns":
        <div class="mtd-store-edit-col-root">
            <div class="mtd-ui-material-form">
                <input class="mtd-data-datetimepicker" type="text" id="@Model.MtdFormPartFieldNavigation.Id" name="@Model.MtdFormPartFieldNavigation.Id" asp-for="MtdStoreStackDate.Register" value="@dateValue" />
                <label for="@Model.MtdFormPartFieldNavigation.Id" class="mtd-ui-text-label">@Model.MtdFormPartFieldNavigation.Name</label>
                <i class="mtd-ui-text-bottom"></i>
            </div>
        </div>
        break;
    default:
        <div class="mtd-ui-material-form">
            <input class="mtd-data-datetimepicker" type="text" id="@Model.MtdFormPartFieldNavigation.Id" name="@Model.MtdFormPartFieldNavigation.Id" asp-for="MtdStoreStackDate.Register" value="@dateValue" />
            <label for="@Model.MtdFormPartFieldNavigation.Id" class="mtd-ui-text-label">@Model.MtdFormPartFieldNavigation.Name</label>
            <i class="mtd-ui-text-bottom"></i>
        </div>
        break;
}
